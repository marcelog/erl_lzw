{deps_dir, "deps"}.
{deps, []}.

{erl_opts, [
  {parse_transform, lager_transform},
  {lager_truncation_size, 163840}
]}.
{eunit_opts, [verbose, {skip_deps, true}]}.
{eunit_exclude_deps, true}.
{cover_enabled, true}.
{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
